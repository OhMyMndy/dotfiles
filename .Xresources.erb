
#include ".Xresources-local"

#define BACKGROUND <%= colors['BACKGROUND'] %>
#define FOREGROUND <%= colors['FOREGROUND'] %>

! Black
#define COLOR0     <%= colors['COLOR0'] %>
#define COLOR8     <%= colors['COLOR8'] %>

! Red
#define COLOR1     <%= colors['COLOR1'] %>
#define COLOR9     <%= colors['COLOR9'] %>

! Green
#define COLOR2     <%= colors['COLOR2'] %>
#define COLOR10    <%= colors['COLOR10'] %>

! Yellow
#define COLOR3     <%= colors['COLOR3'] %>
#define COLOR11    <%= colors['COLOR11'] %>

! Blue
#define COLOR4     <%= colors['COLOR4'] %>
#define COLOR12    <%= colors['COLOR12'] %>

! Purple / Magenta
#define COLOR5     <%= colors['COLOR5'] %>
#define COLOR13    <%= colors['COLOR13'] %>

! Cyan
#define COLOR6     <%= colors['COLOR6'] %>
#define COLOR14    <%= colors['COLOR14'] %>

! White
#define COLOR7     <%= colors['COLOR7'] %>
#define COLOR15    <%= colors['COLOR15'] %>

#define COLOR16    <%= colors['COLOR16'] %>


Xft.dpi: <%= dpi %>
Xft.antialias: <%= %x(xfconf-query -c xsettings -p /Xft/Antialias).chomp.to_i %>
Xft.hinting: <%= %x(xfconf-query -c xsettings -p /Xft/Hinting).chomp.to_i %>
Xft.rgba: <%= %x(xfconf-query -c xsettings -p /Xft/RGBA).chomp %>
Xft.autohint: false
Xft.hintstyle: <%= %x(xfconf-query -c xsettings -p /Xft/HintStyle).chomp %>
Xft.lcdfilter: lcddefault

! Enable the extended coloring options
rofi.modi: drun,window
rofi.color-enabled: true

!                  bg               border     separator
rofi.color-window: BACKGROUND,      COLOR1,    FOREGROUND
!                  bg               fg         bg-alt       hl-bg       hl-fg
rofi.color-normal: BACKGROUND,      COLOR15,   BACKGROUND,  COLOR4,     BACKGROUND
rofi.color-normal: BACKGROUND,      COLOR15,   BACKGROUND,  COLOR4,     BACKGROUND
rofi.color-active: BACKGROUND,      COLOR4,    BACKGROUND,  BACKGROUND, COLOR3
rofi.color-urgent: BACKGROUND,      COLOR1,    BACKGROUND,  BACKGROUND, COLOR1
rofi.separator-style: solid
rofi.sidebar-mode: true
rofi.bw: 1
rofi.columns: 1
rofi.padding: 16

rofi.yoffset: 0
rofi.fake-transparency: false
rofi.location: 0
rofi.width: 50
rofi.font: <%= fonts['normal'].to_rofi %>
rofi.lines: 15
rofi.fixed-num-lines: true
rofi.dpi: <%= dpi %>
rofi.show-icons: true
rofi.run-command: zsh -c -i '{cmd}'
! ##### COLORS #####
! special
*foreground:   FOREGROUND
*background:   BACKGROUND
*cursorColor:  FOREGROUND

! black
*color0:       COLOR0
*color8:       COLOR8

! red
*color1:       COLOR1
*color9:       COLOR9

! green
*color2:       COLOR2
*color10:      COLOR10

! yellow
*color3:       COLOR3
*color11:      COLOR11

! blue
*color4:       COLOR4
*color12:      COLOR12

! magenta
*color5:       COLOR5
*color13:      COLOR13

! cyan
*color6:       COLOR6
*color14:      COLOR14

! white
*color7:       COLOR7
*color15:      COLOR15


*color16:      COLOR16


! ##### END COLORS #####

XTerm*renderFont: true

XTerm*faceName: <%= fonts['monospace'].to_xterm %>
XTerm*faceSize: <%= fonts['monospace'].size %>
XTerm*eightBitInput: false
XTerm*selectToClipboard:true
XTerm*background: #000000
XTerm*saveLines: 16384
XTerm*loginShell: true
XTerm*termName: xterm-256color
XTerm*scaleHeight: 1
XTerm*ScrollBar: false

XTerm*VT100.Translations:       #override\n\
 Shift Ctrl <KeyPress> v: insert-selection(CLIPBOARD)\n\
 Shift Ctrl <KeyPress> c: copy-selection(CLIPBOARD)\n


!################
!# URXVT settings
!################

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0

URxvt*font:                 <%= fonts['monospace'].to_xft %>
! URxvt*boldFont:             <%= fonts['monospace'].to_xft_bold %>
URxvt*letterSpace:          0
URxvt*scrollBar:            false
URxvt*background:           #000000
!URxvt.termName:             xterm-256colorURxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt*iso14755_52: false


*ethinterface: <%= ethinterface %>

normal_font: <%= fonts['normal'].to_ls %>
monospace_font: <%= fonts['monospace'].to_ls %>

MONITOR: <%= default_monitor %>