#!/usr/bin/env bash

echo "Backing up / to the current directory"

sleep 2


sudo tar -cvpzf "backup-$(date "+%Y%m%d-%H%M%S").tar.gz" \
--exclude=/proc \
--exclude=/tmp \
--exclude=/mnt \
--exclude=/dev \
--exclude=/sys \
--exclude=/run \
--exclude=/media \
--exclude=/var/log \
--exclude=/var/www \
--exclude=/var/cache/mock \
--exclude=/var/lib/mock \
--exclude='/swapfile*' \
--one-file-system /
