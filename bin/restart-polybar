#!/usr/bin/env bash

source ~/.profile
source ~/.bash_aliases

set -u

which polybar
polybar_exists=$?

if [ $polybar_exists -eq 0 ]; then
  pkill polybar -9
  pkill xfce4-panel -9

  while pgrep -x polybar >/dev/null
      do sleep 1
  done
  polybar -r top & >/dev/null 2>&1
  sleep 2
  if ! pgrep -x polybar >/dev/null; then
    xfce4-panel & >/dev/null 2>&1
  fi
else
  pkill xfce4-panel -9

  while pgrep -x xfce4-panel >/dev/null
      do sleep 1
  done
  xfce4-panel & >/dev/null 2>&1
fi
