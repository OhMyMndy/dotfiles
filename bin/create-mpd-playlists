#!/usr/bin/env bash
set -xe
cd ~/MyMusic/Playlists
rm -rf ../MpdPlaylists && mkdir ../MpdPlaylists && gfind . -type f -exec sh -c 'cp -f "$0" "../MpdPlaylists/$(echo "$0" | sed -E "s/\s+/_/g" | sed -E "s/\.\///g" | sed -E "s/\//___/g" | sed -E "s/m3u8/m3u/g")" ' {} \;

gfind ../MpdPlaylists -type f -exec sh -c 'sed -E "s/(\.+\/){1,}/..\//g" "$0"' {} \;
