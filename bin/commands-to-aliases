#!/usr/bin/env ruby

# json to aliases


require 'json'
require_relative 'functions.rb'

commands = get_commands_from_commands_file '~/commands.json'

commands.each do |command,value|
    if value.is_a? Array
        value = value.join '; '
    end
    value.gsub! /'/, "'\"'\"'"
    # value.gsub! /"/, '\\\"'
    command = command.gsub /\s/, '_'
    $alias = "alias #{command}='#{value}'"
    puts $alias
end