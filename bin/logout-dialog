#! /bin/bash

action=$(yad --width 300 --entry --title "System Logout" \
    --image=gnome-shutdown \
    --button="Switch User:2" \
    --button="gtk-ok:0" --button="gtk-close:1" \
    --text "Choose action:" \
    --entry-text \
    "Logout" "Lock" "Reboot" "Suspend" "Power Off" )
ret=$?

[[ $ret -eq 1 ]] && exit 0

#if [[ $ret -eq 2 ]]; then
#    gdmflexiserver --startnew &
#    exit 0
#fi

case $action in
    Power*) cmd=" systemctl poweroff -i" ;;
    Reboot*) cmd="systemctl reboot" ;;
    Suspend*) cmd="systemctl suspend" ;;
    Lock*) cmd="bash ~/.config/i3/scripts/lock" ;;
    Logout*)
    case $(wmctrl -m | grep Name) in
        *Openbox) cmd="openbox --exit" ;;
        *FVWM) cmd="FvwmCommand Quit" ;;
        *Metacity) cmd="gnome-save-session --kill" ;;
        *i3) cmd="i3-msg exit" ;;
        *) exit 1 ;;
    esac
    ;;
    *) exit 1 ;;
esac

eval exec $cmd