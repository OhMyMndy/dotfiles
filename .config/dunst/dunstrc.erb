[global]
    font = "<%= dunst['global']['font'] %>"
    markup = yes
    format = "<%= dunst['global']['format'] %>"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 90
    word_wrap = yes
    ignore_newline = no
    geometry = "<%= dunst['global']['geometry'] %>"
    transparency = 0
    idle_threshold = 90
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = <%= dunst['global']['separator_height'] %>
    padding =  <%= dunst['global']['padding'] %>
    horizontal_padding = <%= dunst['global']['horizontal_padding'] %>
    separator_color = "<%= dunst['global']['separator_color'] %>"
    startup_notification = false
    # https://github.com/knopwob/dunst/issues/26#issuecomment-36159395
    icon_position = left
    icon_path = /usr/share/icons/gnome/256x256/
    max_icon_size = 32

    # Browser for opening urls in context menu.
    browser = /usr/bin/chromium
    frame_width = <%= dunst['frame']['width'] %>
    frame_color = "<%= dunst['frame']['color'] %>"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "<%= dunst['urgency_low']['background'] %>"
    foreground = "<%= dunst['urgency_low']['foreground'] %>"
    timeout    =  <%= dunst['urgency_low']['timeout'] %>

[urgency_normal]
    background = "<%= dunst['urgency_normal']['background'] %>"
    foreground = "<%= dunst['urgency_normal']['foreground'] %>"
    timeout    =  <%= dunst['urgency_normal']['timeout'] %>

[urgency_critical]
    background = "<%= dunst['urgency_critical']['background'] %>"
    foreground = "<%= dunst['urgency_critical']['foreground'] %>"
    timeout    =  <%= dunst['urgency_critical']['timeout'] %>
