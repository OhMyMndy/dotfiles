[settings]
screenchange-reload = true

[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color0}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color6}
primary = ${xrdb:color2}
secondary = ${xrdb:color3}
alert = ${xrdb:color5}

accent-dark1 = ${xrdb:color6}
accent-dark2 = ${xrdb:color1}
accent-dark3 = ${xrdb:color2}
accent-light1 = ${xrdb:color3}
accent-light2 = ${xrdb:color4}


[global/wm]
;margin-top = 10
;margin-bottom = 10
;padding-left: 2
;padding-right: 2


[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
dpi = ${xrdb:Xft.dpi:-1}
width = 100%
height = <%= polybar['height'] %>
offset-x = 0
offset-y = 0

background = <%= polybar['background'] %>
foreground = <%= polybar['foreground'] %>

overline-size = 2
overline-color = ${colors.foreground-alt}
underline-size = 2
underline-color = <%= polybar['highlight_color'] %>

;border-bottom-size = 2
;border-bottom-color = ${colors.accent-dark1}

padding-left = <%= polybar['padding'] %>
padding-right = <%= polybar['padding'] %>


module-margin-left = 4
module-margin-right = 4


font-0 = <%= polybar['fonts'][0] %>
font-1 = <%= polybar['fonts'][1] %>
font-2 = <%= polybar['fonts'][2] %>

modules-left = i3 mpd
; window
;modules-center = date
; xwindow
modules-right = pomodoro terminal monitor vpn filesystem load memory date logout
separator = "|"
tray-position = right
tray-padding = <%= polybar['padding'] %>
tray-maxsize = 16
;tray-transparent = true



[module/xwindow]
type = internal/xwindow
label = "%title:0:80:...%"

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %{F#55}%{F-} %layout%
label-layout-underline = ${colors.secondary}
label-indicator-padding = <%= polybar['padding'] %>
#label-indicator-margin = 1
label-indicator-foreground = ${colors.background}
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}


[module/vpn]
type = custom/script
exec = echo vpn
exec-if = ip tuntap show | grep -iE 'tun[0-9]+'
interval = 30
format-underline = ${colors.accent-dark2}
format-prefix = " "
format-prefix-foreground = #5b

[module/pomodoro]
type = custom/script
exec =  [ -f /tmp/pomodoro_time ] && date -d@$(cat /tmp/pomodoro_time) -u +%M:%S 2>/dev/null || echo "Start" 
interval = 5
format-underline = ${colors.accent-dark2}
format-prefix = "  "
format-prefix-foreground = #5b
click-left = bash ~/bin/pomodoro-timer &
click-right = pkill -e -f pomodoro-timer

[module/monitor]
type = custom/script
click-left = bash ~/.config/polybar/scripts/display-resolution.sh &
exec = echo ' '
interval = 9000
format-underline = ${colors.accent-dark1}
format-prefix = "  "

[module/terminal]
type=custom/script
click-left = termite &
exec = echo ' '
format-underline = ${colors.accent-light2}
format-prefix = "  "

interval = 9000


[module/filesystem]
type=custom/script
click-left = /usr/bin/xkill
exec = df --output=pcent / -h | tail -1
interval = 60
format-underline = ${colors.accent-light1}
format-prefix = "   "


[module/redshift]
type = custom/script
interval = 60

exec = ~/.config/polybar/scripts/redshift.sh
format-underline = ${colors.primary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-padding = <%= polybar['wm_padding'] %>

label-mode-padding = <%= polybar['wm_padding'] %>
label-mode-foreground = <%= polybar['foreground'] %>
;label-mode-background = ${colors.primary}

label-focused = "%icon%"
label-focused-foreground = <%= polybar['foreground'] %>
label-focused-padding = <%= polybar['wm_padding'] %>

label-unfocused = "%icon%"
label-unfocused-foreground = <%= polybar['inactive_color'] %>
label-unfocused-padding = <%= polybar['wm_padding'] %>

label-urgent = "%icon%!"
label-urgent-foreground = <%= polybar['urgent_color'] %>
label-urgent-padding = <%= polybar['wm_padding'] %>

label-visible = "%icon%"
label-visible-foreground = <%= polybar['foreground'] %>
label-visible-padding = <%= polybar['wm_padding'] %>

ws-icon-0 = 1: ;
ws-icon-1 = 2: ;
ws-icon-2 = 3: ;
ws-icon-3 = 4: ;
ws-icon-4 = 5: ;
ws-icon-5 = 6: ;
ws-icon-6 = 7: ;
ws-icon-7 = 8: ;
ws-icon-8 = 9: ;
ws-icon-9 = 10: ;

[module/mpd]
type = internal/mpd

; format-online = "<icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>  <icon-repeat> <icon-random>  <label-song>     <label-time>  <bar-progress>  "
format-online = "<label-time> <bar-progress>  <icon-prev> <toggle> <icon-next>  <label-song>"

; Available tokens:
;   %artist%
;   %album%
;   %date%
;   %title%
; Default: %artist% - %title%
label-song = "%artist% - %title%"

icon-prev = " "
icon-seekb = " "
icon-stop = " "
icon-play = " "
icon-pause = " "
icon-next = " "
icon-seekf = " "

icon-random = " "
icon-repeat = " "

bar-progress-width = 10
bar-progress-indicator = 
bar-progress-indicator-foreground = #bb
bar-progress-fill = ─
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-foreground = #44
bar-progress-empty-font = 3

label-time-foreground = #88

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = │
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.accent-dark3}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 10
format-prefix = " "
; format-prefix = "Cpu: "
format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.accent-dark2}
;format = <label> <ramp-coreload>
format = <ramp-coreload>
label = %percentage:3%%
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory]
type = internal/memory
interval = 10
format = <label>
;format = <label> <bar-used>
;label = "Mem:"
;label = RAM %gb_used%/%gb_total%
label = %percentage_used%%
; Only applies if <bar-used> is used
bar-used-indicator =
bar-used-width = 7
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill =▮
bar-used-empty =▮
bar-used-empty-foreground = #444444
format-underline = ${colors.accent-light1}
format-prefix = "   "

[module/swap]
type=custom/script
exec = bash ~/bin/swap-usage
interval = 20
format-underline = ${colors.accent-light1}
format-prefix = "Swap free: "



[module/load]
type=custom/script
interval = 10
exec = cat /proc/loadavg | cut -f1 -d' '
format-prefix = "   "
format-underline = ${colors.accent-dark2}


[module/wlan]
type = internal/network
interface = net1
interval = 10

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.accent-dark3}
format-disconnected-underline = ${self.format-connected-underline}

label-connected = %essid%
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = ${xrdb:ethinterface:eth0}
interval = 10
;   up - down icons
;format-connected-underline = ${colors.accent-light2}
format-connected-prefix = " "
format-connected-foreground = <%= polybar['foreground'] %>
label-connected =  %downspeed%  %upspeed%
label-connected-alt = %local_ip%  %downspeed%  %upspeed%

;format-disconnected-underline = ${self.format-connected-underline}
format-disconnected-prefix = " "
label-disconnected = %ifname% disconnected
label-disconnected-foreground = <%= polybar['inactive_color'] %>

[module/date]
type=custom/script
#type = internal/date
interval = 30
exec = date +"%a %x %R"
format-prefix = "   "
format-underline = ${colors.accent-light2}
;format-prefix-foreground = ${colors.foreground}
click-right = gsimplecal


[module/volume]
type = internal/volume

#format-volume = <label-volume> <bar-volume>
format-volume = <bar-volume>
# label-volume = 
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.accent-light1}
bar-volume-foreground-1 = ${colors.accent-light1}
bar-volume-foreground-2 = ${colors.accent-light1}
bar-volume-foreground-3 = ${colors.accent-light1}
bar-volume-foreground-4 = ${colors.accent-light1}
bar-volume-foreground-5 = ${colors.accent-dark2}
bar-volume-foreground-6 = ${colors.alert}
bar-volume-gradient = false
bar-volume-indicator =
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.foreground-alt}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.accent-light2}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn =  %temperature%
label-warn-foreground = ${colors.foreground}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

ramp-foreground = ${colors.foreground}



[module/logout]
type = custom/script
exec = echo " "
interval = 20
click-left = ~/bin/logout-dialog



[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = " "
label-open-foreground = ${colors.foreground}
label-close = cancel
label-close-foreground = ${colors.alert}
label-separator = " | "
label-separator-foreground = ${colors.primary}

menu-0-0 = " reboot"
menu-0-0-exec = menu-open-1
menu-0-1 = " power off"
menu-0-1-exec = menu-open-2
menu-0-2 = " lock"
menu-0-2-exec = bash ~/.config/i3/scripts/lock
menu-0-3 = " switch user"
menu-0-3-exec = dm-tool switch-to-greeter

menu-1-0 = " reboot"
menu-1-0-exec = reboot

menu-2-0 = " power off"
menu-2-0-exec = poweroff

; vim:ft=dosini
